.contents.row
  .content_post{ :style => "background_image: url(#{@item.image});"}
    .more
      %span= image_tag'arrow_top.png'
      %ul.more_list
        %li
          =link_to '編集',  edit_item_path(@item.id), method: :get
        %li
          =link_to '削除',  item_path(@item.id), method: :delete
    %p= @item.memo
    %a{:href =>"/users/#{@item.user.id}"}
          %span 投稿者
          = @item.user.nickname